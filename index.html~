		<script>
      var $siri_ios9 = document.getElementById('container-ios9');
			var SW9 = new SiriWave9({
				width: 259,
				height: 40,
				speed: 0.2,
				amplitude: 1,
				container: $siri_ios9,
				autostart: true,
			});
      <!--setTimeout(setAmplitude, 3000, 0.1);-->
    function setAmplitude(value)
    {
      SW9.amplitude = value;
    }
function hide()
{
  SW9.hide();
}
function show()
{
  SW9.show();
}
function start()
{
  SW9.start();
}
function stop()
{
  SW9.stop();
}
		</script>

